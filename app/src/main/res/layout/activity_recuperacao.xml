<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="false" android:background="@drawable/left_gradient" android:backgroundTintMode="src_atop" tools:context=".MainActivity">

        <TextView
            android:id="@+id/textRecuperacao"
            android:layout_width="380dp"
            android:layout_height="106dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:lineSpacingExtra="8sp"
            android:text="Recuperação de Senha"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="43dp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Unioz_logo"
            app:layout_constraintVertical_bias="0.036" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonConfirmarDados"
            style="@style/Button"
            android:layout_width="274dp"
            android:layout_height="51dp"
            android:layout_marginTop="45dp"
            android:backgroundTint="#010910"
            android:backgroundTintMode="add"
            android:clickable="true"
            android:fontFamily="sans-serif-thin"
            android:text="Confirmar"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="27sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTelefone"
            app:layout_constraintVertical_bias="0.863"
            app:strokeWidth="1dp" />

        <ImageView
            android:id="@+id/Unioz_logo"
            android:layout_width="174dp"
            android:layout_height="161dp"
            app:layout_constraintBottom_toTopOf="@id/editRecuperacaoRa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.107"
            app:srcCompat="@drawable/unioz_logo" />

        <com.google.android.material.textfield.TextInputLayout android:id="@+id/textInputLayout" android:layout_width="409dp" android:layout_height="wrap_content" android:layout_marginStart="36dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"> </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/editRecuperacaoRa"
            style="@style/EditText"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="16dp"
            android:hint="Digite seu RA"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textRecuperacao"
            app:layout_constraintVertical_bias="0.0"
            android:maxLength="30"/>

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/editRecuperacaoRa" app:layout_constraintEnd_toEndOf="@+id/editRecuperacaoRa" app:layout_constraintHorizontal_bias="0.022" app:layout_constraintStart_toStartOf="@+id/editRecuperacaoRa" app:layout_constraintTop_toTopOf="@+id/editRecuperacaoRa" app:layout_constraintVertical_bias="0.454" app:srcCompat="@drawable/avatar_do_usuario" app:tint="@color/white"/>

        <EditText
            android:id="@+id/editTelefone"
            style="@style/EditText"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:hint="   Digite seu telefone + DDD"
            android:numeric="integer"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editEmail"
            app:layout_constraintVertical_bias="0.0"
            android:maxLength="12"/>

        <ImageView
            android:id="@+id/user_logo4"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/editTelefone"
            app:layout_constraintEnd_toEndOf="@+id/editTelefone"
            app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintStart_toStartOf="@+id/editTelefone"
            app:layout_constraintTop_toTopOf="@+id/editTelefone"
            app:layout_constraintVertical_bias="0.515"
            app:srcCompat="@drawable/avatar_do_usuario"
            app:tint="@color/white"/>

        <EditText
            android:id="@+id/inputToken"
            style="@style/EditText"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:hint=" TOKEN de Recuperação"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonConfirmarDados"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTelefone"
            app:layout_constraintVertical_bias="0.0"
            android:maxLength="15"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/inputToken"

            app:layout_constraintEnd_toEndOf="@+id/inputToken"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="@+id/inputToken"
            app:layout_constraintTop_toTopOf="@+id/inputToken"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_password" />

        <EditText
            android:id="@+id/editEmail"
            style="@style/EditText"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:hint="Digite seu Email"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRecuperacaoRa"
            app:layout_constraintVertical_bias="0.0"
            android:maxLength="35"/>

        <ImageView android:id="@+id/user_logo2" android:layout_width="50dp" android:layout_height="27dp" android:elevation="10dp" app:layout_constraintBottom_toBottomOf="@+id/editEmail" app:layout_constraintEnd_toEndOf="@+id/editEmail" app:layout_constraintHorizontal_bias="0.022" app:layout_constraintStart_toStartOf="@+id/editEmail" app:layout_constraintTop_toTopOf="@+id/editEmail" app:layout_constraintVertical_bias="0.542" app:srcCompat="@drawable/avatar_do_usuario" app:tint="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>