<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="false" android:background="@drawable/left_gradient" android:backgroundTintMode="src_atop" tools:context=".MainActivity">

        <TextView
            android:id="@+id/textRecuperacao"
            android:layout_width="380dp"
            android:layout_height="106dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:lineSpacingExtra="8sp"
            android:text="DIGITE SUA NOVA SENHA:"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Unioz_logo"
            app:layout_constraintVertical_bias="0.106" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonConfirmarRecuperacao"
            style="@style/Button"
            android:layout_width="274dp"
            android:layout_height="51dp"
            android:backgroundTint="#010910"
            android:backgroundTintMode="add"
            android:clickable="true"
            android:fontFamily="sans-serif-thin"
            android:text="Confirmar"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="27sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.916"
            app:strokeWidth="1dp" />

        <ImageView
            android:id="@+id/Unioz_logo"
            android:layout_width="174dp"
            android:layout_height="161dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonConfirmarRecuperacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.088"
            app:srcCompat="@drawable/unioz_logo" />

        <com.google.android.material.textfield.TextInputLayout android:id="@+id/textInputLayout" android:layout_width="409dp" android:layout_height="wrap_content" android:layout_marginStart="36dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"> </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/inputNovaSenha"
            style="@style/EditText"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:hint="Digite a senha nova"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/inputConfirmeNovaSenha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textRecuperacao"
            app:layout_constraintVertical_bias="0.387"
            android:maxLength="20"/>

        <EditText
            android:id="@+id/inputConfirmeNovaSenha"
            style="@style/EditText"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginTop="112dp"
            android:hint="  Digite a senha novamente"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="22dp"

            app:layout_constraintBottom_toTopOf="@+id/buttonConfirmarRecuperacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textRecuperacao"
            app:layout_constraintVertical_bias="0.296"
            android:maxLength="20"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/inputConfirmeNovaSenha"

            app:layout_constraintEnd_toEndOf="@+id/inputConfirmeNovaSenha"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="@+id/inputConfirmeNovaSenha"
            app:layout_constraintTop_toTopOf="@+id/inputConfirmeNovaSenha"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_password" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/inputNovaSenha"

            app:layout_constraintEnd_toEndOf="@+id/inputNovaSenha"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="@+id/inputNovaSenha"
            app:layout_constraintTop_toTopOf="@+id/inputNovaSenha"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_password" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>